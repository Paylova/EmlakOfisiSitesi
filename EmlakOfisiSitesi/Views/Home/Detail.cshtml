@model HousingAdvertisement
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
<link href="~/css/slider/newslider.css" rel="stylesheet" />


<h2 style="text-align:center">İlan Detayı</h2>
<div class="row">
    <div class="col-md-12">
        <div class="slider slider-for">
            @foreach (var image in Model.HousingAdvertisementPhotos.OrderBy(img => img.Order))
            {
                <div class="image-container"><img src="~/images/HousingAdvertisements/@image.FilePath" class="img-responsive" alt="@Model.Title"></div>

            }
        </div>
        <div class="slider slider-nav" style="max-width:600px;margin-left:auto;margin-right:auto;">
            @foreach (var image in Model.HousingAdvertisementPhotos.OrderBy(img => img.Order))
            {
                <img src="~/images/HousingAdvertisements/@image.FilePath" class="img-responsive" alt="@Model.Title" style="margin:2px;max-width:200px;height:auto;margin-bottom:40px">
            }
        </div>
    </div>
    <div class="col-md-12">
        <h3 style="text-align:center">@Model.Title</h3>
        <br />
        <p style="text-align:center">Son Güncelleme Tarihi : @Model.UpdatedDate</p>
    </div>
    <br />

    <div class="col-md-6" style="border: 1px solid #000;border-radius: 10px;box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); padding: 20px;">
        <p>Açıklama: @Model.Description</p>
        <p>Fiyat: @string.Format("{0:N0} ₺", Model.Price)</p>
        <p>Oda Sayısı: @Model.RoomNumber</p>
        <p>Salon Sayısı: @Model.HallNumber</p>
        <p>Banyo Sayısı: @Model.BathroomNumber</p>
        <p>Brüt Metrekare: @Model.GrossSquareMeters m²</p>
        <p>Net Metrekare: @Model.NetSquareMeters m²</p>
        <p>Isıtma Türü: @Model.HeatingType.Name</p>
        <p>Bina Yaşı: @Model.BuildingAge</p>
        <p>Kat Konumu: @Model.FloorLocation.Name</p>
        <p>Kat Numarası: @Model.FloorNumber</p>
        <p>Krediye Uygun: @(Model.IsCreditEligibility ? "Evet" : "Hayır")</p>
        <p>Eşyalı: @((bool)Model.IsFurnished ? "Evet" : "Hayır")</p>
        <p>Kullanım Durumu: @Model.UsageStatus?.Name</p>
    </div>
    <div class="col-md-6" style="border: 1px solid #000;border-radius: 10px;box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); padding: 20px;">
        <p>Cephe: @Model.Facade?.Name</p>
        <p>Aidat: @string.Format("{0:N0} ₺", Model.Dues)</p>
        <p>Tapu Durumu: @Model.DeedStatus?.Name</p>
        <p>Ticaret için Uygun: @((bool)Model.IsSuitableForTrade ? "Evet" : "Hayır")</p>
        <p>Sitede mi: @((bool)Model.IsOnSite ? "Evet" : "Hayır")</p>
        <p>Kira Geliri: @string.Format("{0:N0} ₺", Model.RentalIncome)</p>
        <p>Depozito: @string.Format("{0:N0} ₺", Model.Deposit)</p>
        <p>Şehir: @Model.City.Name</p>
        <p>İlçe: @Model.District.Name</p>
        <p>Adres: @Model.Address</p>
        <p> İlan Türü:@(Model.IsForSale ? "Satılık" : "Kiralık")</p>
        <p>İlan Sahibi: @Model.Agent.Name @Model.Agent.Surname</p>
        <p>Telefon: @Model.Agent.PhoneNumber</p>
    </div>


</div>


<a asp-action="List" asp-controller="Home">Geri Dön</a>

@section Scripts{
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="~/css/slider/newslider.js"></script>
                }