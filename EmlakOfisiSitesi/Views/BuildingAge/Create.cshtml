@model BuildingAgeViewModel
@{
    ViewData["Title"] = "Bina Yaşı Oluştur";
    Layout = "~/Views/Shared/_AdminLayot.cshtml";
}

<form asp-action="Create" asp-controller="BuildingAge" style="margin-bottom:15px;margin-top:15px">
    <div class="row">
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="text" asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="col-md-6" style="margin-bottom:15px">
            <input type="number" asp-for="Min" class="form-control" placeholder="Min">
            <span asp-validation-for="Min" style="color:red"></span>
        </div>
        <div class="col-md-6" style="margin-bottom:15px">
            <input type="number" asp-for="Max" class="form-control" placeholder="Max">
            <span asp-validation-for="Max" style="color:red"></span>
        </div>
        <div action="col-md-12" style="margin-bottom:15px;margin-left:15px;margin-right:15px;width:100%;">
            <select class="form-control" asp-for="IsAndOver">
                <option value="" disabled selected class="disabled-select">
                    Üzeri Mi?
                </option>
                <option value="true">Evet</option>
                <option value="false">Hayır</option>
            </select>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-success" style="width:100%">Ekle</button>
        </div>
    </div>
</form>

