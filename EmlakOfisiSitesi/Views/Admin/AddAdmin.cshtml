@model AdminRegisterViewModel
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayot.cshtml";
}

<form asp-action="AddAdmin" asp-controller="Admin" style="margin-bottom:15px;margin-top:15px">
    <div class="row">
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="text" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı Girin">
            <span asp-validation-for="UserName" style="color:red"></span>
        </div>
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="text" asp-for="Name" class="form-control" placeholder="Ad Girin">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadı Girin">
            <span asp-validation-for="Surname" style="color:red"></span>
        </div>
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="email" asp-for="Email" class="form-control" placeholder="Email Girin">
            <span asp-validation-for="Email" style="color:red"></span>
        </div>
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="password" asp-for="Password" class="form-control" placeholder="Şifre Girin">
            <span asp-validation-for="Password" style="color:red"></span>
        </div>
        <div class="col-md-12" style="margin-bottom:15px">
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrarı">
            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary" style="width:100%">Admin Oluştur</button>
        </div>
    </div>
</form>

